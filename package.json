{
  "name": "prompt-pad",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "biome check --write .",
    "dev:desktop": "turbo run dev --filter=@prompt-pad/desktop",
    "dev:backend": "turbo run dev --filter=@prompt-pad/backend",
    "tauri:dev": "pnpm --filter @prompt-pad/desktop tauri dev",
    "tauri:build": "pnpm --filter @prompt-pad/desktop tauri build",
    "build:desktop": "turbo run build --filter=@prompt-pad/desktop",
    "build:backend": "turbo run build --filter=@prompt-pad/backend",
    "clean": "rimraf .turbo apps/*/dist packages/*/dist apps/*/*.tsbuildinfo packages/*/*.tsbuildinfo apps/*/node_modules packages/*/node_modules node_modules",
    "release": "bumpp --files package.json apps/*/package.json packages/*/package.json apps/desktop/src-tauri/Cargo.toml apps/desktop/src-tauri/tauri.conf.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "bumpp": "^10.4.1",
    "rimraf": "^5.0.7",
    "turbo": "^2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.28.1"
}
