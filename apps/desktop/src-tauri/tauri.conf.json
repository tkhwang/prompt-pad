{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "PromptPad",
  "version": "0.1.0",
  "identifier": "app.tkbetter.promptpad.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost blob: data:; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "PromptPad",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "createUpdaterArtifacts": "v2Compatible",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright 2025 tkBetter.app",
    "category": "Productivity",
    "macOS": {
      "signingIdentity": null,
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFMTY1N0IwODU5NDRDMkEKUldRcVRKU0ZzRmNXenZDSFNlVUhlTnZhOHJNcS9sTVpzY3BxdFkyNVNOM0l6V3h6YWhaU1NpVUIK",
      "endpoints": [
        "https://github.com/tkhwang/prompt-pad/releases/latest/download/latest.json"
      ]
    }
  }
}
